<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meimage()"viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Restaurant.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-light border-bottom box-shadow mb-3">
            <div class="container" role="banner" style="background-color:lawngreen">
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <img src="~/Images/pic12.jpg" style="width:100px"/></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                        
                        <li class="nav-item" >
                            <a class="nav-link text-dark"
                                   asp-area="Demos" asp-controller="Menus" asp-action="Index">Menu</a>
                        </li>
                        <li class="nav-item dropdown" style="margin-left:640px; background-color:aqua">
                            <a style="background-color:burlywood" class="nav-link dropdown-toggle" data-toggle="dropdown" href="#">Welcome2Restaurant</a>
                            <div class="dropdown-menu" style="background-color:grey">
                                <a class="dropdown-item" 
                                   asp-area="Demos" asp-controller="Customers" asp-action="Index">Customers</a>
                                <a class="dropdown-item"
                                   asp-area="Demos" asp-controller="Menus" asp-action="Index">Menu</a>
                                <a class="dropdown-item"
                                   asp-area="Demos" asp-controller="ItemCategories" asp-action="Index">ItemCategories</a>
                                <a class="dropdown-item"
                                asp-area="Demos" asp-controller="Items" asp-action="Index">Items</a>
                                <a class="dropdown-item"
                                asp-area="Demos" asp-controller="Orders" asp-action="Index">Orders</a>
                                <a class="dropdown-item"
                                asp-area="Demos" asp-controller="OrderDetails" asp-action="Index">OrderDetails</a>
                                <a class="dropdown-item"
                                asp-area="Demos" asp-controller="PaymentTypes" asp-action="Index">PaymentTypes</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <div class="container">
        <main role="main" class="pb-3" style="background-color:hotpink">
            
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="background-color:burlywood">
        <div class="container" >
            &copy; 2022 - Aditya Dubey - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>