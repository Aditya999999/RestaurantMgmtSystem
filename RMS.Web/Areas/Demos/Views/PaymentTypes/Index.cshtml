@model IEnumerable<RMS.Web.Models.PaymentType>

@{
    ViewData["Title"] = "Index";
}
<div style="background-color:darkorange">
<h1 style="text-decoration-style:wavy">&hearts;&hearts;&hearts;&hearts;&hearts;&hearts;&hearts;&hearts;&hearts;&hearts;&hearts;<b>PAYMENT SECTION</b>&hearts;&hearts;&hearts;&hearts;&hearts;&hearts;&hearts;&hearts;&hearts;&hearts;&hearts;&hearts;&hearts;&hearts;&hearts;</h1>

<p>
    <a class="btn btn-info" asp-action="Create" style="margin-left:400px">Create New</a>
</p>
<table class="table" style="background-color:chartreuse">
    <thead style="background-color:darkorchid" >
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PaymentTypeName)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Customer)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentTypeName)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Customer.CustomerName)
            </td>
            
            <td>
                @*<a asp-action="Edit" asp-route-id="@item.PaymentTypeId">Edit</a> |*@
                <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.PaymentTypeId">Details</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.PaymentTypeId">Delete</a> |
                <!-- Button to Open the Modal -->
                    <button type="button" class="btn btn-success" data-toggle="modal" data-target="#myModal">
                      Confirm Order
                    </button>

                    <!-- The Modal -->
                    <div class="modal" id="myModal">
                      <div class="modal-dialog">
                        <div class="modal-content">

                          <!-- Modal Header -->
                          <div class="modal-header" style="background-color:orangered">
                            <h4 class="modal-title">Order Confirmation</h4>
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                          </div>

                          <!-- Modal body -->
                          <div class="modal-body" style="background-color:snow">
                            <h3>Cheers....</h3><br/>
                            Order Successfully Placed....<br/>
                            Please wait patiently till order is getting ready....
                          </div>

                          <!-- Modal footer -->
                          <div class="modal-footer" style="background-color:forestgreen">
                            <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                          </div>

                        </div>
                      </div>
                    </div>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
